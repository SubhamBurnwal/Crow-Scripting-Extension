{
    "manifest_version": 3,
    "name": "Crow",
    "version": "1.0",
    "description": "Save and run scripts in tabs",
    "author": "ᛊᚢᛒᚻᚨᛗ",
    "website": "",
    "permissions": [
      "scripting",
      "activeTab", 
      "storage"
    ],
    "action": {
      "default_icon": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
      },
      "default_popup": "./src/index.html"
    },
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "background": {
      "service_worker": "./src/background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }